<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="spec_gatherer" class="Civi\API\Spec\SpecGatherer"/>

        <service id="schema_map_builder" class="Civi\API\Service\Schema\SchemaMapBuilder" public="false">
            <argument type="service" id="dispatcher" />
        </service>

        <!-- factory service is deprecated but for now we're stuck with v2.5 -->
        <service id="schema_map" class="Civi\API\Service\Schema\SchemaMap" factory-service="schema_map_builder" factory-method="build"/>

        <service id="joiner" class="Civi\API\Service\Schema\Joiner">
            <argument type="service" id="schema_map"/>
        </service>

        <service id="action_object_provider" class="Civi\API\Provider\ActionObjectProvider">
            <tag name="event_subscriber"/>
        </service>

        <service id="contact_creation.spec_provider" class="Civi\API\Spec\Provider\ContactCreationSpecProvider">
            <tag name="spec_provider"/>
        </service>

        <service id="custom_field.spec_provider" class="Civi\API\Spec\Provider\CustomFieldSpecProvider">
            <tag name="spec_provider"/>
        </service>

        <service id="custom_group.pre_creation.subsciber" class="Civi\API\Event\Subscriber\CustomGroupPreCreationSubscriber">
            <tag name="event_subscriber"/>
        </service>

        <service id="custom_field.pre_creation.subsciber" class="Civi\API\Event\Subscriber\CustomFieldPreCreationSubscriber">
            <tag name="event_subscriber"/>
        </service>

        <service id="null_value.pre_creation.subscriber" class="Civi\API\Event\Subscriber\NullValueFormattingPreCreationSubscriber">
            <tag name="event_subscriber"/>
        </service>

        <service id="contact.pre_update.subscriber" class="Civi\API\Event\Subscriber\ContactPreUpdateSubscriber">
            <tag name="event_subscriber"/>
        </service>

        <service id="option_value.pre_creation.subscriber" class="Civi\API\Event\Subscriber\OptionValuePreCreationSubscriber">
            <tag name="event_subscriber"/>
        </service>

        <service id="activity.pre_creation.subscriber" class="Civi\API\Event\Subscriber\ActivityPreCreationSubscriber">
            <tag name="event_subscriber"/>
        </service>

        <service id="contact.schema_map.subscriber" class="Civi\API\Event\Subscriber\ContactSchemaMapSubscriber">
            <tag name="event_subscriber"/>
        </service>

    </services>
</container>
